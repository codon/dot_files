[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[color]
	ui = true
[branch]
	autosetupmerge = true
[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~iheffner/.gitignore
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	lg = log -p
	up = pull
	new = "!git log $(ref=$(git symbolic-ref HEAD); echo $(git config -z --get branch.${ref##refs/heads/}.remote)/$(rbranch=$(git config --get branch.${ref##refs/heads/}.merge); echo ${rbranch##refs/heads/})).."
	dif = diff
	stat = status
	only = !git_only
	plw = !git_push_workingtree
	graph = log --all --graph --oneline --decorate
	hist = log --graph --oneline --decorate
[rerere]
	enabled = true
[push]
	default = upstream
[pull]
	default = rebase
[user]
	name = Ivan Heffner
	email = iheffner@marchex.com
[merge]
	tool = vimdiff
#	tool = threesome
[mergetool]
	tool = vimdiff
	prompt = no
[mergetool "threesome"]
	cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
	trustExitCode = true
	prompt = no
[status]
	relativePaths = false
